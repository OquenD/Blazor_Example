@page "/products/{id:int}/details"
@using Entregable3.Data

<PageTitle>Product Detail</PageTitle>

<h1>Datos del producto: @product.id | @product.Code | @product.Name | @product.Price</h1>


@code{
    [Parameter]
    public int id { get; set;}

    private Product product;


    protected override void OnInitialized()
    {
        InMemoryProducts productsBD = new InMemoryProducts();
        List<Product> products = productsBD.getProducts();

        product = products[this.id-1];

    }
}